<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:visibility="gone">
    <ImageView
        android:id="@+id/load_error_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loading_error"/>
    <TextView
        android:id="@+id/load_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_error_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/loading_error_text"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/text_size_12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_loading_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/reload_text"
        android:textColor="@color/color_ff8100"
        android:textSize="@dimen/text_size_15"/>
</RelativeLayout>